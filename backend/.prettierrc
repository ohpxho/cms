{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": false,
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": false,
	"quoteProps": "as-needed",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"plugins": ["@prettier/plugin-php"],
	"overrides": [
		{
			"files": "*.php",
			"options": {
				"parser": "php",
				"phpVersion": "8.2",
				"trailingCommaPHP": true,
				"braceStyle": "1tbs",
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ["*.js", "*.ts", "*.json"],
			"options": {
				"tabWidth": 2,
				"useTabs": true
			}
		}
	]
}